<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>

<%= form_tag("/admin/content/merge/#{@article.id}", :id => "s_merge_with", :enctype => "multipart/form-data", :class => className) do %>
  <%= label_tag 'merge_with','Merge Articles' %>
  <%= text_field_tag 'merge_with' %>
  <%= (submit_tag 'Merge') if @current_user.admin? %>
<% end %>
